<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginTop="5sp"
    android:background="@drawable/edittext_circular"
    android:backgroundTint="#F8F8FF"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="5dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/prod_name"
            android:fontFamily="@font/oswald_regular"
            android:textSize="25dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text="Proudct Name"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:elevation="10dp"
                app:cardCornerRadius="15dp">

                <ImageView
                    android:id="@+id/product_image"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:padding="1dp"
                    android:scaleType="centerCrop"
                    tools:srcCompat="@drawable/diet_icon" />
            </androidx.cardview.widget.CardView>

            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/prod_price"
                    android:text="@string/price2"
                    android:textColor="@color/black"
                    android:fontFamily="@font/oswald_regular"
                    android:textSize="20dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView3"
                        android:fontFamily="@font/oswald_regular"
                        android:layout_marginEnd="5sp"
                        android:text="Quantity: "/>

                    <TextView
                        android:id="@+id/prod_qty"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:fontFamily="@font/oswald_regular"
                        android:text="qty" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:fontFamily="@font/oswald_regular"
                        android:layout_height="wrap_content"
                        android:text="@string/qty_added" />

                    <TextView
                        android:id="@+id/qty_item"
                        android:layout_width="0dp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/oswald_regular"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="0" />

                </LinearLayout>



            </LinearLayout>


        </LinearLayout>


        <RatingBar
            android:id="@+id/prod_rating"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginStart="5sp"
            android:numStars="5" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"

        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp">

            <Button
                android:id="@+id/addToCart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#FCFAF0"
                android:textSize="20sp"
                android:fontFamily="@font/oswald_regular"
                android:text="+" />

            <Button
                android:id="@+id/removeFromCart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#FCFAF0"
                android:fontFamily="@font/oswald_regular"
                android:text="-"
                android:textSize="20sp"
                android:visibility="gone" />

        </LinearLayout>


    </LinearLayout>


</LinearLayout>
